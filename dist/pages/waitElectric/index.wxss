.waitElectric-container {
  padding: 40rpx;
}
.waitElectric-container .tab > View {
  display: inline-block;
  width: calc((100% - 12rpx) / 2);
  text-align: center;
  background: rgba(33, 84, 244, 0.1);
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2154F4;
  line-height: 44rpx;
  border-radius: 8rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}
.waitElectric-container .tab > View:first-child {
  margin-right: 12rpx;
}
.waitElectric-container .tab .active {
  background: #2154F4;
  color: #fff;
}
.waitElectric-container .floor-list-box {
  margin-top: 40rpx;
}
.waitElectric-container .floor-list-box .house-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 46rpx 32rpx;
  background: #F4F4F4;
  margin-bottom: 40rpx;
}
.waitElectric-container .floor-list-box .house-item .item-left .item-title {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #05203D;
  line-height: 50rpx;
}
.waitElectric-container .floor-list-box .house-item .item-left .item-tips {
  margin-top: 20rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #6E717D;
  line-height: 48rpx;
}
.waitElectric-container .floor-list-box .house-item .item-left .item-tips .num {
  color: #F77C10;
}
.waitElectric-container .floor-list-box .house-item .item-right {
  text-align: right;
}
.waitElectric-container .floor-list-box .house-item .item-right .item-opts {
  color: #FF6A6A;
  padding-right: 20rpx;
}
.waitElectric-container .floor-list-box .house-item .item-right .item-zz {
  margin-top: 60rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #F77C10;
  line-height: 44rpx;
}
.waitElectric-container .allWaitList {
  margin-top: 40rpx;
}
.waitElectric-container .allWaitList .list-item {
  background: rgba(244, 244, 244, 0.6);
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
}
.waitElectric-container .allWaitList .list-item .item-title {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #05203D;
  line-height: 56rpx;
}
.waitElectric-container .allWaitList .list-item .item-opts {
  margin-top: 30rpx;
}
.waitElectric-container .allWaitList .list-item .item-opts > Text {
  display: inline-block;
  border-radius: 8rpx;
  border: 2rpx solid #2154F4;
  padding: 8rpx 50rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2154F4;
  line-height: 42rpx;
}
.waitElectric-container .allWaitList .list-item .item-opts > Text:first-child {
  margin-right: 20rpx;
}

